<h1>Howdy</h1>

<% Director.all.each do |director| %>
  <li>
    <%= director.name %> (<%= director.dob %>)
  </li>
<% end %>


<table border = "1">

  <tr>
    <th>ID</th>
    <th>Image</th>
    <th>Name</th>
    <th>DOB</th>
    <th>Link</th>
  </tr>

  <% Director.all.each do |director| %>
    <tr>
      <td><%= director.id %></td>
      <td><img src="<%= director.image %>" alt="Face" srcset="" style="width:250px;"></td>
      <td><%= director.name %></td>
      <td><%= director.dob %></td>
      <td><a href="/directors/<%= director.id %>">Show Details</a></td>
    </tr>
      
  <% end %>

</table>

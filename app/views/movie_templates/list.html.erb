<h1>List of all movies</h1>

<hr>

<table border = "1">

  <tr>
    <th>ID</th>
    <th>Image</th>
    <th>Title</th>
    <th>year</th>
    <th>Link</th>
  </tr>

  <% Movie.all.each do |movie| %>
    <tr>
      <td><%= movie.id %></td>
      <td><img src="<%= movie.image %>" alt="Face" srcset="" style="width:250px;"></td>
      <td><%= movie.title %></td>
      <td><%= movie.year %></td>
      <td><a href="/movies/<%= movie.id %>">Show Details</a></td>
    </tr>
      
  <% end %>

</table>
